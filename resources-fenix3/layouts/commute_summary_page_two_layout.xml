<resources>
    <layouts>
		<layout id="CommuteSummaryPageTwoLayout">
			<drawable id="white_background" />
			
			<!-- Draw the heading with a bar underneath -->
			<label id="commute_start_time" x="center" y="25" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_MEDIUM"/>
			<drawable id="summary_title_bar" />
			
			<!-- Distance -->
			<label x="10" y="60" text="Distance" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_LEFT" font="Gfx.FONT_TINY"/>
			<label id="distance" x="200" y="60" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_RIGHT" font="Gfx.FONT_TINY"/>
			
			<!-- Average Speed -->
			<label x="10" y="85" text="Avg Speed" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_LEFT" font="Gfx.FONT_TINY"/>
